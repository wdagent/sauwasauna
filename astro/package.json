{
  "name": "astro-headless-wp",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "lint": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write .",
    "test": "playwright test",
    "test:smoke": "playwright test tests/e2e-smoke.spec.ts",
    "test:booking": "playwright test tests/e2e-booking-*.spec.ts",
    "test:locale": "playwright test tests/e2e-multi-locale.spec.ts",
    "test:mobile": "playwright test tests/e2e-cross-browser.spec.ts --project=mobile-chrome --project=mobile-safari",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report test-results/html",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:discount": "playwright test tests/e2e-discount-codes.spec.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/tailwind": "^5.1.2",
    "@nanostores/persistent": "^1.2.0",
    "astro": "^5.0.5",
    "nanostores": "^1.1.0",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.49.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.16.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
